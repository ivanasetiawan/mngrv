// core/_content applies mainly to typography (fonts, colors).
// Used for headings, lists and utility classes (`.align-center`).

h1, h2, h3, h4, ul, ol
  margin: 0
  padding: 0
  font-weight: normal

h1
  padding: 1.5em 0
  font-size: 2em

h2
  padding: 1.75em 0
  font-size: 1.5em

h3
  padding: 1.82em 0
  font-size: 1.16em

h4
  font-weight: bold

@media (max-width: 480px)
  h1
    font-size: 1.5em
    padding: 1.75em 0

  h2
    font-size: 1.33em
    padding: 1.5em 0

  h3
    font-size: 1.16em
    padding: 1.82em 0

ul
  margin-bottom: 1.8em
  list-style: square inside

li > ul, li > ol
  margin: .45em 0 0 2.5em

li > ul li, li > ol li
  font-size: 1em

ol
  margin-bottom: 1.8em
  list-style: decimal inside
