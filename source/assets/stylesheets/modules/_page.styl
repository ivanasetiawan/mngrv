// Naming convention:
//
// .block_name
// .block_name-element
// .block_name--modifier
// .block_name.is-active
// .block_name.has-context

.page
  max-width: 39em
  margin: 0 auto
  padding: 1.5em 9em 9em 4.5em
  background: #fff
  border: 1px solid #dfdfdf
  border-width: 0 1px 1px 0

@media (max-width: 780px)
  .page
    padding: 1.5em 5.2em 5.2em 2.6em

@media (max-width: 480px)
  .page
    padding: .75em 2.6em 2.6em 1.3em
