body
  color: $text-color
  background: $bg-color
  font: 18px/1.5 $serif
  -webkit-text-size-adjust: none

a
  &:link
    color: $link-color

  &:visited
    color: $link-visited-color

  &:active, &:hover
    color: $link-active-color

h1, h2, h3, h4, p, ul, ol
  margin: 0
  padding: 0
  font-weight: normal

h1
  padding: 1.5em 0
  font-size: 2em

h2
  padding: 1.75em 0
  font-size: 1.5em

h3
  padding: 1.82em 0
  font-size: 1.16em

h4
  font-weight: bold

p, pre
  margin: 0 0 1.5em

pre, code
  color: $code-color
  font-family: $monospaced
  font-size: 88.8%

pre code
  font-size: 1em

ul
  margin-bottom: 1.8em
  list-style: square inside

li > ul, li > ol
  margin: .45em 0 0 2.5em

li > ul li, li > ol li
  font-size: 1em

ol
  margin-bottom: 1.8em
  list-style: decimal inside
